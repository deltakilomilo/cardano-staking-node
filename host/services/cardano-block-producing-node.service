# The Cardano node service (part of systemd)
# file: /etc/systemd/system/cardano-block-producer-node.service 

[Unit]
Description     = Cardano block producing node service
Wants           = network-online.target
After           = network-online.target 

[Service]
User            = %u
Type            = simple
WorkingDirectory= %h
ExecStartPre=-/usr/bin/docker stop cardano-block-producing-node
ExecStartPre=-/usr/bin/docker rm cardano-block-producing-node
ExecStartPre=/usr/bin/docker pull kitsunecrypto/cardano-node
ExecStart       =/usr/bin/docker run --rm --name=cardano-block-producing-node -v cardano_node:/cardano-node-home -p 6000:6000 -p 3001:3001 -e NODE_CONFIG=<NODE_CONFIG> -e NODE_TYPE=block-producer -e BLOCK_PRODUCER_IP=<BLOCK_PRODUCER_IP> -e RELAY_IP=<RELAY_IP> kitsunecrypto/cardano-node ./startBlockProducingNode.sh
KillSignal=SIGINT
#RestartKillSignal=SIGINT
TimeoutStopSec=2
LimitNOFILE=32768
Restart=always
RestartSec=5
SyslogIdentifier=cardano-block-producing-node

[Install]
WantedBy	= multi-user.target